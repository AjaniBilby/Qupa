{
	"whitespace" : [
		" ",
		"\n",
		"\t",
		"\r"
	],

	"comment" : [
		["/*", "*/"],
		["//", "\n"]
	],

	"wrapper": [
		{
			"name"    : "comment.multiline",
			"open"    : "/*",
			"close"   : "*/",
			"inner"   : false,
			"discard" : true
		}, {
			"name"    : "comment.singleline",
			"open"    : "//",
			"close"   : "\n",
			"inner"   : false,
			"discard" : true
		},

		{
			"name"   : "string.double",
			"open"   : "\"",
			"close"  : "\"",
			"inner"  : false,
			"escape" : true
		}, {
			"type"   : "string.single",
			"open"   : "'",
			"close"  : "'",
			"inner"  : false,
			"escape" : true
		},

		{
			"name"  : "bracket.square",
			"open"  : "[",
			"close" : "]",
			"inner" : true
		}, {
			"name"  : "bracket.round",
			"open"  : "(",
			"close" : ")",
			"inner" : true
		}, {
			"name"  : "bracket.curly",
			"open"  : "{",
			"close" : "}",
			"inner" : true
		}
	],

	"tokens": {
		"token.equal"        : "==",
		"token.notEqual"     : "!=",
		"token.greater"      : ">",
		"token.lesser"       : "<",
		"token.greaterEqual" : ">=",
		"token.lesserEqual"  : "<=",
		
		
		"token.assign"   : "=",

		"token.add"      : "+",
		"token.subtract" : "-",
		"token.multiply" : "*",
		"token.divide"   : "/",

		"token.delimiter.variable"   : ".",
		"token.delimiter.array"      : ",",
		"token.delimiter.assignment" : ";"
	},

	"keywords" : [
		"import", "expose",
		"return",
		"if", "elif", "else",
		"as", "in", "of",

		"class"
	]
}