{
	"scope" : [
		{
			"name" : "global",
			"patterns" : [
				"import",
				"expose",
				"function",
				"declare"
			]
		},

		{
			"name" : "execution",
			"patterns" : [
				"if",
				"elif",
				"else",
				"declare",
				"return"
			]
		},

		{
			"name" : "expression",
			"patterns" : null
		}
	],

	"pattern": [
		{
			"name"  : "import.direct",
			"match" : ["keyword.import", "string", "token.delimiter.assignment"],
			"sub"   : [null, null, null]
		}, {
			"name"  : "import.as",
			"match" : ["keyword.import", "string", "keyword.as", "namespace", "token.delimiter.assignment"],
			"sub"   : [null, null, null, null, null]
		}, {
			"name"  : "expose",
			"match" : ["keyword.expose", "namespace", "token.delimiter.assignment"],
			"sub"   : [null, null, null]
		},

		{
			"name"  : "function",
			"match" : ["namespace", "namespace", "bracket.round", "bracket.curly"],
			"sub"   : [null, null, "execution", null]
		},

		{
			"name"  : "declare",
			"match" : ["namespace", "namespace", "token.delimiter.assignment"],
			"sub"   : [null, null, null]
		},

		{
			"name"  : "if",
			"match" : ["keyword.if", "bracket.round", "bracket.curly"],
			"sub"   : [null, "expression", "execution"]
		}, {
			"name"  : "elif",
			"match" : ["keyword.if", "bracket.round", "bracket.curly"],
			"sub"   : [null, "expression", "execution"]
		}, {
			"name"  : "else",
			"match" : ["keyword.else", "bracket.curly"],
			"sub"   : [null, "expression", "execution"]
		},

		{
			"name"  : "return",
			"match" : ["keyword.return", "*", "token.delimiter.assignment"],
			"sub"   : [null, "expression", null]
		}
	]
}