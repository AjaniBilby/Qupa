external assume {
	type i32 size 4;
	type float size 4;
	type double size 4;
	type void size 0;

	i32 iadd(i32 a, i32 b);
	float fadd(float a, float b);

	void iprint(i32 val);
	void fprint(float val);
	void iprintln(i32 val);
	void fprintln(float val);
}
alias int i32; // allow refering to i32 as int
expose int;    // expose LLVM base types
expose float;
expose double;
expose void;

// Merge add functions into single namespace
i32 add (i32 a, i32 b) {
	return iadd(a, b);
}
float add(float a, float b) {
	return fadd(a, b);
}
expose add;

// Merge print functions into single namespace
void print(i32 val) {
	iprint(val);
	return;
}
void print(float val) {
	iprint(val);
	return;
}
expose print;

// Merge println functions into single namespace
void println(i32 val) {
	iprintln(val);
	return;
}
void println(float val) {
	iprintln(val);
	return;
}
expose println;