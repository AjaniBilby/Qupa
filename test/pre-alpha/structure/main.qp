import "../std.qp";

struct Rect {
	i32 width;
	i32 height;
}


i32 main() {
	// Define two example rectangles
	Rect a;
	Rect b;
	a.width = 4;
	a.height = 5;
	b.width = 6;
	b.height = 7;

	// Test single structure argument function
	i32 area = Area(a);
	println(area);
	area = Area(b);
	println(area);

	// Check parsing forward/back a structure
	Rect c = Shift(a, 3);
	println(c.width);
	println(c.height);

	// Test returning struct function
	c = Combine(a, b);

	// Check that a & b weren't modified
	println(a.width);
	println(a.height);
	println(b.width);
	println(b.height);

	// Check the result of C
	println(c.width);
	println(c.height);

	return 0;
}

Rect Shift(Rect a, int val) {
	a.width = Add(a.width, val);
	a.height = Add(a.height, val);
	return a;
}

i32 Area(Rect rec){
	return Mul(rec.width, rec.height);
}

Rect Combine(Rect a, Rect b) {
	a.width = Add(a.width, b.width);
	a.height = Add(a.height, b.height);
	return a;
}